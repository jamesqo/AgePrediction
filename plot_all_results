#!/bin/bash

module load anaconda3
source activate james

script_dir="$(dirname "${BASH_SOURCE[0]}")"

cd "$script_dir/results"
for run in *; do
    pushd "$run"
    if [[ -f config.json &&
          -f train_losses_during_training.txt &&
          -f val_losses_during_training.txt && 
          -f best_model_val_losses_per_bin.txt ]]; then
        echo "Generating plots in figures/$run"
        python "$script_dir/plot_results.py" "$run"
    fi
    popd
done

echo "Done"
