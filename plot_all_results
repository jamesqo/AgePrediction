#!/bin/bash

module load anaconda3
source activate james

script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

cd "$script_dir/results"
for run in *; do
    pushd "$run" >/dev/null
    if [[ -f config.json &&
          -f train_losses_during_training.txt &&
          -f val_losses_during_training.txt && 
          -f best_model_val_preds.csv ]]; then
        echo "Generating plots in figures/$run"
        python "$script_dir/src/plot_results.py" "$run"
    fi
    popd >/dev/null
done

echo "Done"
